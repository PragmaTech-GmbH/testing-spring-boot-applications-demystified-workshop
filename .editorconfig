# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,xml,properties,yml,yaml}]
indent_size = 2

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[*.{html,js,ts,jsx,tsx,css,scss,json}]
indent_size = 2

[*.{cmd,bat}]
end_of_line = crlf

[*.{xml,xsd}]
max_line_length = 120

[*.csv]
insert_final_newline = false